extends layout

block content
  div.container
    h3.title Providers Results
    h4.subtitle Here are the best places for you to go to find #{answers.interests} in Cambridge. We built this list for someone who identified as #{answers.gender}, age #{answers.age}.
    table.table.table-striped.table-bordered
        thead
            tr
                th Name
                th Transit/Contact
                th Additional Notes
        tbody
            each provider in providers
                tr
                    td
                        p= provider.ProgramName
                    td
                        if (provider.Transit)
                            p Public Transit: #{provider.Transit}
                        p= Address
                        p= provider.Address
                        p= provider.City + ' '+provider.State + ' '+ provider.Zip
                        if provider.Phone
                            p Phone: #{provider.Phone}
                    td
                        ul
                            each service in provider.servicesArray
                                li #{service}

